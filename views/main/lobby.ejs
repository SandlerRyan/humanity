<% layout('../mainLayout') -%>
<script src="/socket.io/socket.io.js"></script>



<h1 class="centered-heading">Game Lobby</h1>
<div class="centered-heading"><input type="button" id="create" value="Create a Game" name="create-game" onclick="window.location.href = '/create';" class="btn btn-primary"></input></div>

<div id="show-games">
</div>

<script type="text/javascript" src="http://documentcloud.github.com/underscore/underscore-min.js"></script>
<script src="/js/lobby.js"></script>

<script id="tmpl-games" type="text/template">
   
   <table class="table table-striped table-bordered centered-table">
      <thead>
         <tr>
            <th>Game Id</th>
            <th>Action</th>
         </tr>
      </thead>
      <tbody>
         {[ _.each(games, function(game) { ]}
            <tr>
            <td>{{game.id }}</td>
            <td><a href="/game/{{ game.id }}"><button type="button" class="btn btn-primary">Join!</button></a>
            </td>
            </tr>
         {[ },this); ]}
      </tbody>
   </table>
</script>
